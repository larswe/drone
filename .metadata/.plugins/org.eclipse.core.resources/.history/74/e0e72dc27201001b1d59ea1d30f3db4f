package uk.ac.ed.inf.heatmap;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

/**
 * Hello world!
 *
 */
public class App 
{
	/*
	 * Input: Name of a file containing 10 lines, where each line consists of 10 comma-separated numbers.
	 */
    public static void main(String[] args) {
    	
    	fetchInput(args);
    	int[][] grid = new int[10][10];
    	
    	
    	
    	
    }
    
    /*
     * Given the list of program arguments, this method returns the prediction file if we received exactly one argument, containing the name of an existing & accessible file. 
     */
    public static void fetchInput(String[] args) {
    	if (args.length != 1) {
        	IllegalArgumentException e = new IllegalArgumentException("The application expected 1 argument but received " + args.length);
        	e.printStackTrace();
        	System.exit(1);
        }
    	 
    	File file = new File(args[0]);
    	BufferedReader reader = null;
    	try {
    		reader = new BufferedReader(new FileReader(file));
    	} catch (FileNotFoundException e) {
    		e.printStackTrace();
    		System.exit(1);
    	}
    	
    	String str;
    	try {
			while ((str = reader.readLine()) != null) {
			    String[] predRowStr = str.split(",");
			    for (String s : predRowStr) System.out.println(s);
			}
		} catch (IOException e) {
			e.printStackTrace();
		} 
    	
    }
}
